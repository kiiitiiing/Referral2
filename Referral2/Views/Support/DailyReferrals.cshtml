@model PaginatedList<DailyReferralSupport>

@{
    ViewData["Title"] = "Daily Referrals";
    var startDate = ViewBag.StartDate;
    var endDate = ViewBag.EndDate;
    var dateRange = startDate.ToString("dd/MM/yyyy") + " - " + endDate.ToString("dd/MM/yyyy");
}

<div class="content">
    <div class="container">
        <div class="row">
            <!-- CARD DANGER -->
            <div class="col-md-3">
                <!-- SELECT DATE -->
                <div class="card card-danger card-green">
                    <!-- CARD DANGER HEADER -->
                    <div class="card-header">
                        <h3 class="card-title">
                            Filter Result
                        </h3>
                        <span class="badge fa-pull-right">
                            @ViewBag.Total
                        </span>
                    </div>
                    <form asp-action="DailyReferrals">
                        <!-- CARD DANGER BODY -->
                        <div class="card-body">
                            <!-- SELECT DATE -->
                            <div class="form-group">
                                <input class="form-control form-control-sm" type="text" value="@dateRange" id="daterange" name="daterange" autocomplete="off">
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="form-group">
                                <!-- FILTER -->
                                <button type="submit" value="Filter" class="btn btn-block btn-success">
                                    <i class="fa fa-filter"></i>
                                    &nbsp;Filter Result
                                </button>
                                <button value="Filter" class="btn btn-block btn-warning">
                                    <i class="fa fa-file-excel"></i>
                                    &nbsp;Export Data
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <partial name="~/Views/Shared/PartialViews/_LinksPartial.cshtml" />
            </div>
            <div class="col-md-9">
                <!-- USERS LIST -->
                <div class="card card-outline">
                    <!-- DAILY REFERRALS HEADER -->
                    <div class="card-header card-success with-border">
                        <h2>
                            Daily Referral
                        </h2>
                        <span class="text-success">
                            @startDate.ToString("MMMM dd, yyyy") to @endDate.ToString("MMMM dd, yyyy")
                        </span>
                    </div>
                    <!-- DAILY REFERRALS BODY -->
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-bordered">
                                <thead>
                                    <tr class="bg-black">
                                        <th rowspan="2" style="vertical-align: middle;">Name of Users</th>
                                        <th class="text-center" colspan="5">Number of Outgoing Referrals</th>
                                        <th class="text-center" colspan="4">Number of Incoming Referrals</th>
                                    </tr>
                                    <tr class="bg-black">
                                        <th class="text-center">Accepted</th>
                                        <th class="text-center">Redirected</th>
                                        <th class="text-center">Seen</th>
                                        <th class="text-center">Unseen</th>
                                        <th class="text-center">TOTAL</th>
                                        <th class="text-center">Accepted</th>
                                        <th class="text-center">Redirected</th>
                                        <th class="text-center">Seen</th>
                                        <th class="text-center">TOTAL</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        var seen = item.OutSeen - (item.OutAccepted + item.OutRedirected);
                                        seen = seen < 0 ? 0 : seen;
                                        var unseen = item.OutTotal - seen;
                                        var incomingTotal = item.InAccepted + item.InRedirected + item.InSeen;
                                        <tr>
                                            <td style="font-size:0.9em; white-space: nowrap;">@item.DoctorName</td>
                                            <td class="text-center">@item.OutAccepted</td>
                                            <td class="text-center">@item.OutRedirected</td>
                                            <td class="text-center">@seen</td>
                                            <td class="text-center">@unseen</td>
                                            <td class="text-center">@item.OutTotal</td>

                                            <td class="text-center">@item.InAccepted</td>
                                            <td class="text-center">@item.InRedirected</td>
                                            <td class="text-center">@item.InSeen</td>
                                            <td class="text-center">@incomingTotal</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer">
                        @if (Model._totalPages > 1)
                        {
                            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                            <ul class="pagination" style="justify-content:center!important;">
                                <li>
                                    <a asp-action="DailyReferrals"
                                       asp-route-page="@(Model._pageIndex - 1)"
                                       class="btn btn-default @prevDisabled">
                                        «
                                    </a>
                                </li>
                                @for (int x = 1; x <= Model._totalPages; x++)
                                {
                                    var activeClass = x == Model._pageIndex ? "btn-primary" : "btn-default";
                                    <li>
                                        <a asp-action="DailyReferrals"
                                           asp-route-page="@x"
                                           class="btn @activeClass">
                                            @x
                                        </a>
                                    </li>
                                }
                                <li>
                                    <a asp-action="DailyReferrals"
                                       asp-route-page="@(Model._pageIndex + 1)"
                                       class="btn btn-default @nextDisabled">
                                        »
                                    </a>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('input[name="daterange"]').daterangepicker({
            format: 'DD/MM/YYYY',
            startDate: '@startDate.ToString("dd/MM/yyyy")',
            endDate: '@endDate.ToString("dd/MM/yyyy")',
            opens: 'right'
        });
    });
</script>
@model IEnumerable<IncomingReferralViewModel>

@{
    ViewData["Title"] = "Incoming Referrals";
}

<div class="col-md-12">
    <div class="card card-success card-outline">
        <div class="card-header with-border">
            <h3>Incoming Referrals</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr class="bg-black">
                            <th>Patient Name</th>
                            <th>Referring Facility</th>
                            <th>Department</th>
                            <th>Date Referred</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><span class="text-primary text-bold">@item.PatientName</span></td>
                                <td><span class="facility">@item.ReferringFacility</span></td>
                                <td><span class="facility">@item.Department</span></td>
                                <td><span class="text-success">@item.DateReferred.ToString("MMMM d, yyyy h:mm tt",System.Globalization.CultureInfo.InvariantCulture)</span></td>
                                <td><span class="text-success">@item.Status</span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">

        </div>
    </div>
</div>


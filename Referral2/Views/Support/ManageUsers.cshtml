@model IEnumerable<SupportManageViewModel>

@{
    ViewData["Title"] = "Manage Users";
}

<div id="modal-placeholder"></div>

<div class="col-md-12">
    <div class="card card-success card-outline">
        <div class="card-header">
            <form class="fa-pull-right" asp-action="ManageUsers" method="get">
                <div class="form-actions no-color">
                    <p>
                        <input type="text" placeholder="Search name..." name="searchName" value="@ViewBag.SearchString" />
                        <button type="submit" value="Search" class="btn btn-flat btn-sm btn-success">
                            <i class="fa fa-search"></i>
                            &nbsp;Search
                        </button>
                        <button type="button" class="btn btn-flat btn-sm btn-primary" data-toggle="ajax-modal" data-target="#add-doctor-modal" data-url="@Url.Action("AddUser")">
                            <i class="fa fa-user"></i>
                            &nbsp;Add User
                        </button>
                    </p>
                </div>
            </form>
            <h3>List of Support User</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr class="bg-black">
                            <th>Name</th>
                            <th>Department</th>
                            <th>Contact</th>
                            <th>Username</th>
                            <th>Status</th>
                            <th>Last Login</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a class="text-warning" data-toggle="ajax-modal" data-target="#update-doctor-modal" data-url="@Url.Action("UpdateUser", new { id = item.Id })">@item.DoctorName</a>
                                </td>
                                <td>@item.DepartmentName</td>
                                <td>
                                    @item.Contact<br />
                                </td>
                                <td>@item.Username</td>
                                <td class="text-success">
                                    @item.Status.ToUpper()
                                </td>
                                <td>@item.LastLogin</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
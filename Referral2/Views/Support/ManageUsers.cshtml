@model IEnumerable<SupportManageViewModel>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="col-md-12">
    <div class="card card-success card-outline">
        <div class="card-header">
            <form class="fa-pull-right form-inline ml-3" asp-action="ManageUsers" method="get">
                <div class="form-actions no-color">
                    <input type="text" class="form-control form-control-sm" placeholder="Search name..." name="searchName" value="@ViewBag.SearchString" />
                    <button type="submit" value="Search" class="btn btn-sm btn-success">
                        <i class="fa fa-search"></i>
                        &nbsp;Search
                    </button>
                    <button type="button" class="btn btn-sm btn-primary" data-toggle="ajax-modal" data-target="#add-doctor-modal" data-url="@Url.Action("AddUser")">
                        <i class="fa fa-user"></i>
                        &nbsp;Add User
                    </button>
                </div>
            </form>
            <h3>Manage Users</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr class="bg-black">
                            <th>Name</th>
                            <th>Department</th>
                            <th>Contact</th>
                            <th>Username</th>
                            <th>Status</th>
                            <th>Last Login</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>
                                        <a href="#" class="text-warning" data-toggle="ajax-modal" data-target="#update-doctor-modal" data-url="@Url.Action("UpdateUser", new { id = item.Id })">
                                            Dr. @item.DoctorName
                                        </a>
                                    </strong>
                                </td>
                                <td>@item.DepartmentName</td>
                                <td>
                                    @item.Contact<br />
                                </td>
                                <td>@item.Username</td>
                                <td class="text-success">
                                    @item.Status.ToUpper()
                                </td>
                                <td>@item.LastLogin</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
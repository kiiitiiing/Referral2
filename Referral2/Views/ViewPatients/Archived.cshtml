@model PaginatedList<ArchivedViewModel>

@{
    ViewData["Title"] = "Archived Patients";
    var dateRange = ViewBag.StartDate + " - " + ViewBag.EndDate;
    string types = "";
    string dataTarget = "";
    string dataUrl = "";

}


<div class="col-md-12">

    <!-- CARD START-->
    <div class="card">
        <!-- CARD DANGER HEADER -->
        <div class="card-header">
            @await Html.PartialAsync("~/Views/Shared/PartialViews/_PatientSearchFilter.cshtml", new SearchModel
            {
                Action = "Archived",
                StartDate = ViewBag.StartDate,
                EndDate = ViewBag.EndDate,
                Search = ViewBag.CurrentSearch
            })
            <div>
                <h3 class="card-title">Archived Patients</h3><br />
                <span class="text-sm text-muted">TOTAL: @ViewBag.Total</span>
            </div>
            <div class="clearfix"></div>
        </div>
        <!-- CARD DANGER BODY -->
        <form method="post" action="">
            <input type="hidden" name="_token" value="" autocomplete="off" />
            <div class="card-body">
                @if (Model.Count() > 0)
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    <p>Referring Facility</p>
                                </th>
                                <th>
                                    <p>Patient Name/Code</p>
                                </th>
                                <th>
                                    <p>Date Archived</p>
                                </th>
                                <th>
                                    <p>Reason</p>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if(item.Type)
                                {
                                    types = "Pregnant";
                                    dataTarget = "print-pregnant-form-modal";
                                    dataUrl = Url.Action("PrintablePregnantForm", "ViewForms", new { code = item.Code });
                                }
                                else
                                {
                                    types = "Non-Pregnant";
                                    dataTarget = "normal-form-modal";
                                    dataUrl =  Url.Action("PrintableNormalForm", "ViewForms", new { code = item.Code });
                                }
                                <tr>
                                    <td class="facility-color">
                                        @item.ReferringFacility<br />
                                        <p class="small text-muted">@types</p>
                                    </td>
                                    <td>
                                        <a href="#" data-toggle="ajax-modal" data-target="#@dataTarget" data-url="@dataUrl">
                                            @item.PatientName
                                        </a><br />
                                        <span class="small text-muted">
                                            @item.Code
                                        </span>
                                    </td>
                                    <td>
                                        <span>@item.DateArchive</span>
                                    </td>
                                    <td>
                                        @item.Reason
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-warning">
                        <span class="text-lg">
                            <i class="fa fa-exclamation-triangle"></i>
                            &nbsp;No data found!
                        </span>
                    </div>
                }

            </div>
            <!-- CARD FOOTER -->
            <div class="card-footer">
                @await Html.PartialAsync("~/Views/Shared/PartialViews/_PageList.cshtml", new PageListModel
               {
                   Action = "Archived",
                   HasNextPage = Model.HasNextPage,
                   HasPreviousPage = Model.HasPreviousPage,
                   PageIndex = Model._pageIndex,
                   TotalPages = Model._totalPages,
                   Parameters = new Dictionary<string, string>
                    {
                       { "page", Model._pageIndex.ToString() },
                       { "search", ViewBag.CurrentSearch },
                       { "dateRange", dateRange }
                    }
                })
            </div>
        </form>
    </div>
</div>



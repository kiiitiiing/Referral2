<script>
    var patientId;
    var url;

    $('.patientId').on('click', function () {
        patientId = $(this).data('patient_id');
    });

    $('#refer_modal').on('show.bs.modal', function () {
        url = '/AddPatients/Refer?id=' + patientId;
        $.get(url).done(function (data) {
            $('#normal_content').empty();
            $('#normal_content').html(data);
        });
    });
</script>
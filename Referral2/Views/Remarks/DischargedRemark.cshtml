@model DischargeRemarkViewModel


<div class="modal fade" role="dialog" id="discharged_modal">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <form asp-action="DischargedRemark">
                <div class="modal-header">
                    <h4>
                        Discharge Patient
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="">
                        <input type="hidden" asp-for="Code" />
                    </div>
                    <div class="">
                        <span>Select Date/Time:</span>
                        <input asp-for="DateDischarged" value="@DateTime.Now.ToString("yyyy-MM-ddThh:mm",System.Globalization.CultureInfo.InvariantCulture)" class="form-control" />
                        <span asp-validation-for="DateDischarged" class="text-danger"></span>
                    </div>
                    <div class="">
                        <span>Enter Remarks:</span>
                        <textarea asp-for="Remarks" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Remarks" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer justify-content-end">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>


@model IEnumerable<OnlineUsersAdminViewModel>
@{
    ViewData["Title"] = "OnlineUsers";
    var dateNow = DateTime.Now.ToString("MMMM dd, yyyy");
}


<div class="col-md-12">
    <div class="card card-success card-outline">
        <div class="card-header">
            <form class="fa-pull-right" asp-action="SupportUsers" method="get">
                <div class="form-actions no-color">
                    <p>
                        <input type="date" name="SearchString" value="@DateTime.Now.ToString("MM/dd/yyyy")" />
                        <button type="submit" value="Search" class="btn btn-flat btn-sm btn-success">
                            <i class="fa fa-calendar"></i>
                            &nbsp;Change Date
                        </button>
                    </p>
                </div>
            </form>
            <h3>Online Users</h3><br />
            <h4 class="text-success">@dateNow</h4>
        </div>
        <div class="card-body">
            @if (Model.Count() != 0)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr class="bg-black">
                                <th>Facility</th>
                                <th>Name of User</th>
                                <th>Level</th>
                                <th>Department</th>
                                <th>Status</th>
                                <th>Login</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Facility</td>
                                    @foreach (var users in item.LoggedInUser)
                                    {
                                        <td>@users.Name</td>
                                        <td>@users.Level</td>
                                        <td>@users.Department</td>
                                        <td>@users.Status</td>
                                        <td>@users.Login.ToString("hh:mm tt", System.Globalization.CultureInfo.InvariantCulture)</td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            { 
                <div class="alert alert-warning">
                    <span class="">
                        <i class="fa fa-warning"></i>
                        &nbsp;No data found!
                    </span>
                </div>
            }
        </div>
    </div>
</div>
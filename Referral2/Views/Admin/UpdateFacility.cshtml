@model Facility

<div class="modal-header">
    <fieldset>
        <legend><i class="fa fa-plus"></i> Add Facility</legend>
    </fieldset>
</div>
<div class="modal-body">
    <form asp-action="AddFacility" method="post">
        <div class="form-group">
            <label>Facility name:</label>
            <input class="form-control" type="text" asp-for="Name" autofocus required>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label>Abbr:</label>
            <input class="form-control" type="text" asp-for="Abbrevation">
        </div>
        <div class="form-group">
            <label>Province:</label>
            <select class="form-control" id="province-filter" asp-for="ProvinceId" asp-items="ViewBag.Provinces" required>
                <option value="">Select Province</option>
            </select>
            <span class="text-danger" asp-validation-for="ProvinceId"></span>
        </div>
        <div class="form-group">
            <label>Municipality:</label>
            <select class="form-control" asp-for="MuncityId">
                <option value="">Select Municipality</option>
            </select>
            <span class="text-danger" asp-validation-for="MuncityId"></span>
        </div>
        <div class="form-group">
            <label>Barangay:</label>
            <select class="form-control" asp-for="BarangayId">
                <option value="">Select Barangay</option>
            </select>
            <span class="text-danger" asp-validation-for="BarangayId"></span>
        </div>
        <div class="form-group">
            <label>Address:</label>
            <input class="form-control" type="text" asp-for="Address" required>
            <span class="text-danger" asp-validation-for="Address"></span>
        </div>
        <div class="form-group">
            <label>Contact:</label>
            <input class="form-control" type="text" asp-for="Contact" required>
            <span class="text-danger" asp-validation-for="Contact"></span>
        </div>
        <div class="form-group">
            <label>Email:</label>
            <input class="form-control" type="text" asp-for="Email">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label>Chief of hospital(name):</label>
            <input class="form-control" type="text" asp-for="ChiefHospital">
            <span class="text-danger" asp-validation-for="ChiefHospital"></span>
        </div>
        <div class="form-group">
            <label>Hospital Level:</label>
            <select class="form-control" asp-for="HospitalLevel" asp-items="ViewBag.HospitalLevels">
                <option value="">Select Hospital Level</option>
            </select>
            <span class="text-danger" asp-validation-for="HospitalLevel"></span>
        </div>
        <div class="form-group">
            <label>Hospital Type:</label>
            <select class="form-control" asp-for="HospitalType" asp-items="ViewBag.HospitalTypes">
                <option value="">Select Hospital Type</option>
            </select>
            <span class="text-danger" asp-validation-for="HospitalType"></span>
        </div>
        <hr>
        <div class="modal-footer">
            <button type="button" class="btn btn-default btn-sm" data-dismiss="modal"><i class="fa fa-times"></i> Cancel</button>
            <button type="submit" class="btn btn-success btn-sm">
                <i class="fa fa-check"></i>
                &nbsp;Save
            </button>
        </div>
    </form>
</div>
<div class="modal-footer">

</div>
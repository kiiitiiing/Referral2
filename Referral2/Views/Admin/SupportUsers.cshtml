@model PaginatedList<SupportUsersViewModel>
@{
    ViewData["Title"] = "List of Support User";
}

<div class="col-md-12">
    <div class="card card-success card-outline">
        <div class="card-header">
            <form class="fa-pull-right form-inline ml-3" asp-action="SupportUsers" method="get">
                <div class="form-actions no-color">
                    <input type="text" class="form-control form-control-sm" placeholder="Search name..." name="search" value="@ViewBag.Filter" />
                    <button type="submit" value="Search" class="btn btn-sm btn-success">
                        <i class="fa fa-search"></i>
                        &nbsp;Search
                    </button>
                    <button type="button" class="btn btn-sm btn-primary" data-toggle="ajax-modal" data-target="#add-support-modal" data-url="@Url.Action("AddSupport")">
                        <i class="fa fa-user"></i>
                        &nbsp;Add User
                    </button>
                </div>
            </form>
            <h3>List of Support User</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr class="bg-black">
                            <th>Name</th>
                            <th>Facility</th>
                            <th>Contact / Email</th>
                            <th>Username</th>
                            <th>Status</th>
                            <th>Last Login</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var lastLogin = item.LastLogin.ToString("MMM d, yyyy h:mm tt", System.Globalization.CultureInfo.InvariantCulture);
                            if (lastLogin.Equals(default))
                            {
                                lastLogin = "Never login";
                            }
                            <tr>
                                <td>
                                    <a class="text-warning text-bold" 
                                       style="cursor:pointer;"
                                       data-toggle="ajax-modal" 
                                       data-target="#update-support-modal" 
                                       data-url="@Url.Action("UpdateSupport", new { id = item.Id })">
                                        @item.Name
                                    </a>
                                </td>
                                <td>@item.Facility</td>
                                <td>
                                    @item.Contact<br />
                                    <small class="text-success">(@item.Email)</small>
                                </td>
                                <td>@item.Username</td>
                                <td>
                                    @if (item.Status.Equals("login"))
                                    {
                                        <strong class="text-success">Login</strong>
                                    }
                                    else if (item.Status.Equals("logout"))
                                    {
                                        <strong class="text-danger">Logout</strong>
                                    }
                                </td>
                                <td>@lastLogin</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            @if (Model.Count() >= Model._pageSize)
            {
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                <ul class="pagination" style="justify-content:center!important;">
                    <li>
                        <a asp-action="Facilities"
                           asp-route-page="@(Model._pageIndex - 1)"
                           asp-route-filter="@ViewBag.Filter"
                           class="btn btn-default @prevDisabled">
                            «
                        </a>
                    </li>
                    @for (int x = 1; x <= Model._totalPages; x++)
                    {
                        var activeClass = x == Model._pageIndex ? "btn-primary" : "btn-default";
                        <li>
                            <a asp-action="Facilities"
                               asp-route-page="@x"
                               asp-route-filter="@ViewBag.Filter"
                               class="btn @activeClass">
                                @x
                            </a>
                        </li>
                    }
                    <li>
                        <a asp-action="Facilities"
                           asp-route-page="@(Model._pageIndex + 1)"
                           asp-route-filter="@ViewBag.Filter"
                           class="btn btn-default @nextDisabled">
                            »
                        </a>
                    </li>
                </ul>
            }
        </div>
    </div>
</div>
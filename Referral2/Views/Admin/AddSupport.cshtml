@model AddSupportViewModel

<div class="modal fade" id="add-support-modal" tabindex="-1" role="dialog" aria-labelledby="addContactLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <fieldset>
                    <legend>
                        <i class="fa fa-user-plus"></i>
                        &nbsp;Add User
                    </legend>
                </fieldset>
            </div>
            <form asp-action="AddSupport">
                <div class="modal-body">
                    <!-- FIRST NAME -->
                    <div class="form-group">
                        <label>First Name:</label>
                        <input type="text" class="form-control" asp-for="Firstname" autofocus required autocomplete="off">
                    </div>
                    <!-- MIDDLE NAME -->
                    <div class="form-group">
                        <label>MIddle Name:</label>
                        <input type="text" class="form-control" asp-for="Middlename" autofocus required autocomplete="off">
                    </div>
                    <!-- LAST NAME -->
                    <div class="form-group">
                        <label>Last Name:</label>
                        <input type="text" class="form-control" asp-for="Lastname" autofocus required autocomplete="off">
                    </div>
                    <!-- CONTACT NUMBER -->
                    <div class="form-group">
                        <label>Contact Number:</label>
                        <input type="text" class="form-control" asp-for="ContactNumber" autofocus required autocomplete="off">
                    </div>
                    <!-- EMAIL ADDRESS -->
                    <div class="form-group">
                        <label>Email Address:</label>
                        <input type="text" class="form-control" asp-for="Email" autofocus required autocomplete="off">
                    </div>
                    <hr />
                    <!-- FACILITY -->
                    <div class="form-group">
                        <label>Facility:</label>
                        <select class="form-control" asp-for="FacilityId" asp-items="ViewBag.Facilities" required autocomplete="off">
                            <option>Select Facility...</option>
                        </select>
                    </div>
                    <!-- DESIGNATION -->
                    <div class="form-group">
                        <label>Designation:</label>
                        <input type="text" class="form-control" asp-for="Designation" autofocus required autocomplete="off">
                    </div>
                    <hr />
                    <!-- USERNAME -->
                    <div class="form-group">
                        <label>Username:</label>
                        <input type="text" class="form-control" asp-for="Username" autofocus required autocomplete="off">
                    </div>
                    <!-- PASSWORD -->
                    <div class="form-group">
                        <label>Password:</label>
                        <input type="password" class="form-control" asp-for="Password" autofocus required autocomplete="off">
                    </div>
                    <!-- CONFIRM PASSWORD -->
                    <div class="form-group">
                        <label>Confirm Password:</label>
                        <input type="password" class="form-control" asp-for="ConfirmPassword" autofocus required autocomplete="off">
                    </div>
                </div>
                <!-- REFER FOOTER -->
                <div class="modal-footer justify-content-end">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        <i class="fa fa-times"></i>
                        &nbsp;Close
                    </button>
                    <button type="submit" class="btn btn-success" data-save>
                        <i class="fa fa-check"></i>
                        &nbsp;Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

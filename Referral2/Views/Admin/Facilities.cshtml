@model  IEnumerable<FacilitiesViewModel>
@{
    ViewData["Title"] = "List of Facilities";
}

    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <form class="fa-pull-right form-inline" asp-action="Facilities" method="get">
                            <input class="form-control form-control-sm" type="text" placeholder="Search name..." name="search" value="@ViewBag.Search" />
                            <button class="btn btn-sm btn-success" type="submit" value="Search" >
                                <i class="fa fa-search"></i>
                                &nbsp;Search
                            </button>
                            <button type="button" class="btn btn-sm btn-primary" data-toggle="ajax-modal" data-target="#add-facility-modal" data-url="@Url.Action("AddFacility")">
                                <i class="fa fa-hospital"></i>
                                &nbsp;Add Facility
                            </button>
                </form>
                <h3>List of Facility</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr class="bg-black">
                                <th>Facility</th>
                                <th>Contact</th>
                                <th>Email</th>
                                <th>Chief Hospital</th>
                                <th>Level</th>
                                <th>Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="#" data-toggle="ajax-modal" data-target="#update-facility-modal" data-url="@Url.Action("UpdateFacility", "Admin", new { id = item.Id })">
                                            @item.Facility
                                        </a>
                                        <br />
                                        <small class="text-success">(@item.Address)</small>
                                    </td>
                                    <td>
                                        @item.Contact
                                    </td>
                                    <td>@item.Email</td>
                                    <td>@item.Chief</td>
                                    <td>@item.Level</td>
                                    <td>@item.Type</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
@model  IEnumerable<FacilitiesViewModel>
@{
    ViewData["Title"] = "List of Facilities";
}

    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <form class="fa-pull-right" asp-action="Facilities" method="get">
                    <div class="form-actions no-color">
                        <p>
                            <input type="text" placeholder="Search name..." name="SearchString" value="@ViewBag.SearchString" />
                            <button type="submit" value="Search" class="btn btn-flat btn-sm btn-success">
                                <i class="fa fa-search"></i>
                                &nbsp;Search
                            </button>
                            <a class="btn btn-flat btn-sm btn-primary">
                                <i class="fa fa-hospital"></i>
                                &nbsp;Add Facility
                            </a>
                        </p>
                    </div>
                </form>
                <h3>List of Facility</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr class="bg-black">
                                <th>Facility</th>
                                <th>Contact</th>
                                <th>Email</th>
                                <th>Hospital's Chief</th>
                                <th>Level</th>
                                <th>Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="#">@item.Facility</a><br />
                                        <small class="text-success">(@item.Address)</small>
                                    </td>
                                    <td>
                                        @item.Contact
                                    </td>
                                    <td>@item.Email</td>
                                    <td>@item.Chief</td>
                                    <td>@item.Level</td>
                                    <td>@item.Type</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
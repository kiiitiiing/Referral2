@model ConsolidatedViewModel

@{
    ViewData["Title"] = "INCOMING REFERRAL CONSOLIDATION TABLE  (Within Province Wide Health System)";
    var startDate = ViewBag.StartDate;
    var endDate = ViewBag.EndDate;
    var dateRange = startDate.ToString("dd/MM/yyyy") + " - " + endDate.ToString("dd/MM/yyyy");
}
    <div style="
    position:absolute;
    left: 1%;
    right: 1%;">
        <form asp-action="ConsolidatedMcc" method="post">
            <div class="row" style="margin-top: -0.5%; margin-bottom: 1%">
                <div class="col-md-4">
                    <input class="form-control form-control-sm" type="text" value="@dateRange" id="daterange" name="daterange" autocomplete="off">
                </div>
                <div class="col-md-6">
                    <div class="input-group-btn">
                        <button type="submit" class="btn btn-info btn-flat">Filter</button>
                        <a href="http://203.177.67.126/doh/referral/excel/incoming" type="button" name="from_the_start" class="btn btn-warning btn-flat"><i class="fa fa-file-excel-o"></i> Incoming (Excel)</a>
                        <a href="http://203.177.67.126/doh/referral/excel/outgoing" type="button" name="from_the_start" class="btn btn-success btn-flat"><i class="fa fa-file-excel-o"></i> Outgoing (Excel)</a>
                        <a href="http://203.177.67.126/doh/referral/excel/all" type="button" name="from_the_start" class="btn btn-primary btn-flat"><i class="fa fa-file-excel-o"></i> All (Excel)</a>
                    </div>
                </div>
            </div>
        </form>
        

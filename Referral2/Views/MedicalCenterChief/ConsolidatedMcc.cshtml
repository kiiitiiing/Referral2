                                                if (!string.IsNullOrEmpty(item.ItemName))
                                                {
                                                    <label><span class="badge bg-maroon">@item.NoItem</span> @item.ItemName</label><br />
                                                }
                                            }
                                        }
                                        else
                                        {
                                            <div class="tab-pane fade active in" >
                                                <h1>Empty Record!</h1>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- OUTGOING TAB -->
                    <div class="tab-pane fade show" id="outgoing" role="tabpanel" aria-labelledby="outgoing">
                        <div class="row">
                            <!-- HOSPITAL SIDE -->
                            <div class="col-md-4">

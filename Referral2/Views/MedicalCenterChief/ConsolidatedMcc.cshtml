                                    <!-- COMMON TRANSPORTATION -->
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="pill" href="#transportation-out" role="tab">
                                            <i class="text-red fa fa-ambulance"></i>
                                            &nbsp;Common Transportation
                                        </a>
                                    </li>
                                    <!-- DEPARTMENT -->
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="pill" href="#department-out" role="tab">
                                            <i class="text-info fa fa-ambulance"></i>
                                            &nbsp;Department
                                        </a>
                                    </li>
                                    <!-- REMARKS -->
